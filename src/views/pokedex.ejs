<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <!-- bower:css -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css" />
    <!-- endbower -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/css/app.css">
    <!-- endinject -->
    <title><%=title %></title>
</head>

<body>
    <% include partials/navbar %>
    <div class="container-fluid">
        <div class="row">
            <!-- CAROUSEL -->
            <div class="col-lg-6">
              <table class="table table-hover">
                <thead>
                  <th>Dex No.</th>
                  <th>Preview</th>
                  <th>Name</th>
                  <th>Form</th>
                  <th colspan="2">Type</th>
                  <th>Weight</th>
                  <th>Height</th>
                </thead>
                <tbody>
                    <% for(var i=0;i < messages.length;i++ ){%>
                      <tr>
                        <% var dir="http://serebii.net/pokedex-sm/icon/"+messages[i].natdex;
                        var form=messages[i].form;
                        if(form!="Normal"){
                          if(form.startsWith("Mega")){
                            dir+="-m";
                            if(form.endsWith("X"))
                              dir+="x";
                            if(form.endsWith("Y"))
                              dir+="y";
                          }
                          if(form=="Alolan"){
                            dir+="-a";
                          }
                          //tratando con wormadam
                          switch(form){
                            case "Trash Cloak":
                              dir+="-t";
                              break;
                            case "Sandy Cloak":
                              dir+="s";
                              break;
                          }

                          //tratando con rotom
                          switch(form){
                            case "Mow Rotom":
                              dir+="m";
                              break;
                            case "Frost Rotom":
                              dir+="f";
                              break;
                            case "Heat Rotom":
                              dir+="h";
                              break;
                            case "Fan Rotom":
                              dir+="s";
                              break;
                            case "Wash Rotom":
                              dir+="w";
                              break;
                          }
                          //tratando con oricorio
                          switch(form){
                            case "Pom-Pom Style":
                              dir+="-p";
                              break;
                            case "Pa'u Style":
                              dir+="-pau";
                              break;
                            case "Sensu Style":
                              dir+="-s";
                              break;
                          }
                          if(form.startsWith("Zen"))
                            dir+="d";
                          if(form.endsWith("Unbound"))
                            dir+="-u";
                        }
                        dir+=".png"; %>
                        <td><%=messages[i].natdex %></td>
                        <td><img src=<%=dir %>></td>
                        <td><%=messages[i].name%></td>
                        <td><%=messages[i].form%></td>
                        <td><%=messages[i].type1%></td>
                        <td><%=messages[i].type2%></td>
                        <td align="right"><%=messages[i].weight_kg %> kg</td>
                        <td align="right"><%=messages[i].height_m %> m</td>
                      </tr>
                    <% }%>
                    <tr><td colspan="5"><a href="/messages/new"><i class="fa fa-plus" aria-hidden="true"></i> Add new message</td></tr>
                </tbody>
              </table>
            </div>
        </div>

        <!-- bower:js -->
        <script src="/bower_components/jquery/dist/jquery.min.js"></script>
        <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="/bower_components/angular/angular.js"></script>
        <script src="/bower_components/angular-route/angular-route.js"></script>
        <script src="/bower_components/angular-cookies/angular-cookies.js"></script>
        <!-- endbower -->
        <!-- inject:js -->
        <script src="/js/app.js"></script>
        <!-- endinject -->
</body>

</html>
